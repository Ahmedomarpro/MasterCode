<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Maqrah" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


        <!-- App Font -->
        <item name="fontFamily">@font/rubik_regular</item>

        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowActionBarOverlay">true</item>

    </style>
    <style name="TextBoldFont">
        <item name="android:textSize">@dimen/text_size16</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/rubik_bold</item>
    </style>

    <style name="TextMediumFont">
        <item name="android:textSize">@dimen/text_size14</item>
        <item name="fontFamily">@font/rubik_medium</item>
    </style>

    <style name="TextRegularFont">
        <item name="android:textSize">@dimen/text_size14</item>
        <item name="fontFamily">@font/rubik_regular</item>
    </style>
</resources>